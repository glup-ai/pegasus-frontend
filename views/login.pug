doctype html
html
  head
    title glup.ai - login
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
    link(rel='stylesheet' href='/stylesheets/login.css')
body
    .row
        p.header 
            b pegasus
            span .glup.ai
    .row
        form.col.s12(action='/auth/login' method='post')
            .row
                .input-field.col.s12
                    input#username(name='username' type='text' autofocus autocomplete="off")
                    label(for='username') brukernavn
                .input-field.col.s12
                    // Removed 'password'-type property to circumvent Chrome's ugly auto-fill styling.
                    // Please don't do this irl, ever.
                    input#password.validate(name='password' type='text' autocomplete="off")
                    label(for='password') passord
            .row.submit-container
                button.waves-effect.waves-light.btn-large.transparent.submit(type='submit') fortsett
    script(src='/javascripts/login.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')